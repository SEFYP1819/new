<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BottomMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0a0a10"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:behavior_peekHeight="20dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:id="@+id/BottomMenuToggle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/horiz_dot" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/BottomMenuToggle"
        android:layout_below="@+id/BottomMenuToggle">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/HomePageBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/HomePage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/HomePageBtn"
                android:gravity="center"
                android:text="Home"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ProfilePageBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/ProfilePage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfilePageBtn"
                android:layout_marginStart="80dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/RebalancePageBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="160dp"
                android:src="@drawable/rebalance" />

            <TextView
                android:id="@+id/RebalancePage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfilePageBtn"
                android:layout_marginStart="160dp"
                android:gravity="center"
                android:text="What-if"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ChatBotPageBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="240dp"
                android:src="@drawable/chat_log" />

            <TextView
                android:id="@+id/ChatBotPage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfilePageBtn"
                android:layout_marginStart="240dp"
                android:gravity="center"
                android:text="Chat Bot"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/LogOutBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="320dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/LogOut"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfilePageBtn"
                android:layout_marginStart="320dp"
                android:gravity="center"
                android:text="Logout"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </HorizontalScrollView>

</RelativeLayout>